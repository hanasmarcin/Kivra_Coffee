<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.KivraCoffee" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/kivra_green</item>
        <item name="colorPrimaryVariant">@color/kivra_green_dark</item>
        <item name="colorOnSecondary">@color/text_subtitle_light</item>
        <item name="colorSurface">@color/darkest_gray</item>
        <item name="colorPrimarySurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/text_subtitle_light</item>
        <item name="colorOnPrimarySurface">@color/text_subtitle_light</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/darkest_gray</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.KivraCoffee.BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <!-- No action bar overlay for layouts with custom toolbar. -->
    <style name="Theme.KivraCoffee.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App bar overlay for custom toolbar -->
    <style name="Theme.KivraCoffee.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/darkest_gray</item>
    </style>

    <!-- Text appearance for titles -->
    <style name="Theme.KivraCoffee.TitleText">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/asap</item>
        <item name="android:textColor">@color/text_title_light</item>
    </style>

    <!-- Text appearance for subtitles -->
    <style name="Theme.KivraCoffee.SubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/asap</item>
        <item name="android:textColor">@color/text_subtitle_light</item>
    </style>

</resources>