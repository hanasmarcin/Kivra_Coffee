<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KivraCoffee" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/kivra_green</item>
        <item name="colorPrimaryVariant">@color/kivra_green_dark</item>
        <item name="colorOnPrimary">@color/text_subtitle_light</item>
        <item name="colorSurface">@color/light_gray</item>
        <item name="colorPrimarySurface">@color/white</item>
        <item name="colorOnSurface">@color/text_subtitle_dark</item>
        <item name="colorOnPrimarySurface">@color/text_subtitle_dark</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <style name="Theme.KivraCoffee.BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <!-- No action bar overlay for layouts with custom toolbar. -->
    <style name="Theme.KivraCoffee.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App bar overlay for custom toolbar -->
    <style name="Theme.KivraCoffee.AppBarOverlay">
        <item name="colorPrimary">@color/light_gray</item>
    </style>

    <!-- Text appearance for chips -->
    <style name="Theme.KivraCoffee.ChipText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/asap</item>
    </style>

    <!-- Text appearance for titles -->
    <style name="Theme.KivraCoffee.TitleText">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/asap</item>
        <item name="android:textColor">@color/text_title_dark</item>
    </style>

    <!-- Text appearance for toolbar -->
    <style name="Theme.KivraCoffee.TitleText.Home">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text appearance for subtitles -->
    <style name="Theme.KivraCoffee.SubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/asap</item>
        <item name="android:textColor">@color/text_subtitle_dark</item>
    </style>

</resources>